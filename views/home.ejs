<%- include("partials/header") %>
<h1>Home</h1>
<% postList.forEach(function(post) { %>
    <div class="card">
        <div class="card-header">
            <h2><%= post.title %></h2>
        </div>
        <div class="card-body">
            <p>
                <%= post.post.substring(0, 90) + "..."%>
                <a href = "/posts/<%= post._id %>">Read More</a>
            </p>
        </div>
    </div>
<% }); %>
<%- include("partials/footer") %>
